<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="ass2.ass2_jfx.menuController">

    <!-- Background Image Layer -->
    <ImageView fitHeight="500" fitWidth="500" translateY="-50">
        <Image url="@/ass2/ass2_jfx/WWTBAMUS2020Logo.png"/>
    </ImageView>

    <!-- Content Layer -->
    <VBox alignment="BOTTOM_CENTER" spacing="20">
        <padding>
            <Insets bottom="100.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Button prefHeight="60" prefWidth="120" text="Play" onAction="#onPlayClick" style="-fx-font-size:24px"/>
        <Button prefHeight="60" prefWidth="120" text="Design" onAction="#onDesignClick" style="-fx-font-size:24px"/>
    </VBox>
</StackPane>