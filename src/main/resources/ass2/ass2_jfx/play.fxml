<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ass2.ass2_jfx.playController"
      VBox.vgrow="ALWAYS">

    <fx:include source="menubar.fxml"/>
    <StackPane VBox.vgrow="ALWAYS">

        <!-- Background Image Layer -->
        <ImageView fitHeight="200" fitWidth="200" translateY="-300">
            <Image url="@/ass2/ass2_jfx/WWTBAMUS2020Logo.png"/>
        </ImageView>

        <!-- Content Layer -->
        <BorderPane>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <left>
                <VBox alignment="TOP_CENTER" prefWidth="300" style="-fx-background-color: rgba(0, 0, 0, 0.5);">
                    <padding>
                        <Insets top="20.0" left="10.0" right="10.0"/>
                    </padding>
                    <Label fx:id="playerMoneyLabel" text="Player Money:" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="playerMoneyAmountLabel" text="\$0" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                </VBox>
            </left>

            <right>
                <VBox prefWidth="300" spacing="6" alignment="CENTER"
                      style="-fx-background-color: rgba(0, 0, 0, 0.5);">
                    <padding>
                        <Insets top="20.0" left="10.0" right="10.0"/>
                    </padding>
                    <Label fx:id="tier15" text="\$1,000,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier14" text="\$500,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier13" text="\$250,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier12" text="\$125,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier11" text="\$64,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier10" text="\$32,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier9" text="\$16,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier8" text="\$8,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier7" text="\$4,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier6" text="\$2,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier5" text="\$1,000" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier4" text="\$500" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier3" text="\$300" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier2" text="\$200" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                    <Label fx:id="tier1" text="\$100" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                </VBox>
            </right>

            <center>
                <BorderPane>
                    <center>
                        <VBox alignment="CENTER" spacing="20">
                            <Label fx:id="messageLabel" text="Question: Who are you?"
                                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        </VBox>
                    </center>

                    <bottom>
                        <GridPane alignment="CENTER" hgap="20" vgap="10">
                            <padding>
                                <Insets left="45.0" right="20.0" bottom="100.0"/>
                            </padding>
                            <Button fx:id="A" text="Josh"
                                    style="-fx-text-fill: white; -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="Infinity"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#onAnswerClick"/>
                            <Button fx:id="B" text="Shane"
                                    style="-fx-text-fill: white; -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="Infinity"
                                    GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#onAnswerClick"/>
                            <Button fx:id="C" text="Devin"
                                    style="-fx-text-fill: white; -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="Infinity"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#onAnswerClick"/>
                            <Button fx:id="D" text="Brad"
                                    style="-fx-text-fill: white; -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="Infinity"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#onAnswerClick"/>
                            <Button fx:id="next" text="Next Question"
                                    style="-fx-text-fill: white; -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="300"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="2"
                                    GridPane.halignment="CENTER"
                                    onAction="#onNextClick" visible="false"/>
                            <Button fx:id="mainMenu" text="Main Menu"
                                    style="-fx-text-fill: white; -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="300"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="2"
                                    GridPane.valignment="CENTER"
                                    onAction="#onMainMenuClick" visible="false"/>
                            <Button fx:id="restart" text="Restart"
                                    style="-fx-text-fill: white; -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="300"
                                    GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="2"
                                    GridPane.valignment="CENTER"
                                    onAction="#onRestartClick" visible="false"/>
                            <Button fx:id="langButton" text="EN"
                                    style="-fx-text-fill: white; -fx-font-size: 20px;"
                                    prefWidth="80" prefHeight="60"
                                    GridPane.columnIndex="0" GridPane.rowIndex="2"
                                    GridPane.columnSpan="2"
                                    GridPane.halignment="CENTER" onAction="#toggleLang"/>
                        </GridPane>
                    </bottom>

                    <top>
                        <HBox alignment="TOP_RIGHT" spacing="10">
                            <Label fx:id="timerLabel" text="60" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-padding: 10 30 0 0;"/>
                        </HBox>
                    </top>
                </BorderPane>
            </center>

        </BorderPane>
    </StackPane>
</VBox>