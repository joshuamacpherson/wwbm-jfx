<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.MenuBar?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ass2.ass2_jfx.playController"
      VBox.vgrow="ALWAYS">

    <MenuBar style="-fx-background-color: #3a006f;"
             xmlns:fx="http://javafx.com/fxml">
        <Menu text="File">
            <MenuItem text="Exit" onAction="#onExitClick"/>
        </Menu>
        <Menu text="Configuration">
            <MenuItem text="Settings"/>
        </Menu>
        <Menu text="Look &amp; Feel">
            <MenuItem text="Dark" onAction="#onDarkClick"/>
            <MenuItem text="Light" onAction="#onLightClick"/>
        </Menu>
        <Menu text="Language">
            <MenuItem text="English" onAction="#onENClick"/>
            <MenuItem text="French" onAction="#onFRClick"/>
        </Menu>
    </MenuBar>
    <StackPane VBox.vgrow="ALWAYS">

        <!-- Background Image Layer -->
        <ImageView fitHeight="300" fitWidth="300"
                   StackPane.alignment="TOP_CENTER"
                   preserveRatio="true">
            <StackPane.margin>
                <Insets top="150"/>
            </StackPane.margin>
            <Image url="@/ass2/ass2_jfx/WWTBAMUS2020Logo.png"/>
        </ImageView>

        <!-- Content Layer -->
        <BorderPane>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <left>
                <VBox alignment="TOP_CENTER" prefWidth="300" styleClass="side-panel">
                    <padding>
                        <Insets top="20.0" left="10.0" right="10.0"/>
                    </padding>
                    <Label fx:id="playerMoneyLabel" text="Player Money:" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="playerMoneyAmountLabel" text="\$0" style=" -fx-font-size: 24px;"/>
                </VBox>
            </left>

            <right>
                <VBox prefWidth="300" spacing="6" alignment="CENTER"
                      styleClass="side-panel">
                    <padding>
                        <Insets top="20.0" left="10.0" right="10.0"/>
                    </padding>
                    <Label fx:id="t15" text="\$1,000,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t14" text="\$500,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t13" text="\$250,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t12" text="\$125,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t11" text="\$64,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t10" text="\$32,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t9" text="\$16,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t8" text="\$8,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t7" text="\$4,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t6" text="\$2,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t5" text="\$1,000" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t4" text="\$500" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t3" text="\$300" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t2" text="\$200" style=" -fx-font-size: 24px;"/>
                    <Label fx:id="t1" text="\$100" style=" -fx-font-size: 24px;"/>
                </VBox>
            </right>

            <center>
                <BorderPane>
                    <bottom>
                        <GridPane alignment="CENTER" hgap="20" vgap="10">
                            <padding>
                                <Insets left="45.0" right="20.0" bottom="150.0"/>
                            </padding>
                            <Label fx:id="messageLabel" text="Question: Who are you?"
                                   style="-fx-font-size: 24px; -fx-font-weight: bold;"
                                   GridPane.columnIndex="0" GridPane.rowIndex="0"
                                   GridPane.columnSpan="2" GridPane.halignment="CENTER" translateY="-30"/>
                            <Button fx:id="A" text="Josh"
                                    style=" -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="Infinity"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#onAnswerClick"/>
                            <Button fx:id="B" text="Shane"
                                    style=" -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="Infinity"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#onAnswerClick"/>
                            <Button fx:id="C" text="Devin"
                                    style=" -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="Infinity"
                                    GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#onAnswerClick"/>
                            <Button fx:id="D" text="Brad"
                                    style=" -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="Infinity"
                                    GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#onAnswerClick"/>
                            <Button fx:id="next" text="Next Question"
                                    style=" -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="300"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" GridPane.rowSpan="2"
                                    GridPane.halignment="CENTER"
                                    onAction="#onNextClick" visible="false"/>
                            <Button fx:id="mainMenu" text="Main Menu"
                                    style=" -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="300"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" GridPane.rowSpan="2"
                                    GridPane.valignment="CENTER"
                                    onAction="#onMainMenuClick" visible="false"/>
                            <Button fx:id="restart" text="Restart"
                                    style=" -fx-font-size: 24px;"
                                    prefWidth="300" prefHeight="60" maxWidth="300"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2" GridPane.rowSpan="2"
                                    GridPane.valignment="CENTER"
                                    onAction="#onRestartClick" visible="false"/>
                        </GridPane>
                    </bottom>

                    <top>
                        <HBox alignment="TOP_RIGHT" spacing="10">
                            <Label fx:id="timerLabel" text="60" style=" -fx-font-size: 28px; -fx-font-weight: bold; -fx-padding: 10 30 0 0;"/>
                        </HBox>
                    </top>
                </BorderPane>
            </center>

        </BorderPane>
    </StackPane>
</VBox>