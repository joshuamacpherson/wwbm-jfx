<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="ass2.ass2_jfx.playController">

    <!-- Background Image Layer -->
    <ImageView fitHeight="500" fitWidth="500" translateY="-50">
        <Image url="@/ass2/ass2_jfx/WWTBAMUS2020Logo.png"/>
    </ImageView>

    <!-- Content Layer -->
    <BorderPane>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label fx:id="messageLabel" text="Surprise!" visible="false"/>
        <Button text="Click this if you are playing!" onAction="#onButtonPress"/>

        <center>
            <VBox alignment="TOP_CENTER" spacing="20" translateY="100">
                <Label text="Question: Who are you?"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
        </center>

        <bottom>
            <GridPane alignment="CENTER" hgap="20" vgap="10">
                <padding>
                    <Insets bottom="100.0" left="20.0" right="20.0"/>
                </padding>

                <Button text="Josh"
                        style="-fx-text-fill: white; -fx-font-size: 24px;"
                        prefWidth="300" prefHeight="60" maxWidth="Infinity"
                        GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button text="Shane"
                        style="-fx-text-fill: white; -fx-font-size: 24px;"
                        prefWidth="300" prefHeight="60" maxWidth="Infinity"
                        GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button text="Devin"
                        style="-fx-text-fill: white; -fx-font-size: 24px;"
                        prefWidth="300" prefHeight="60" maxWidth="Infinity"
                        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Button text="Brad"
                        style="-fx-text-fill: white; -fx-font-size: 24px;"
                        prefWidth="300" prefHeight="60" maxWidth="Infinity"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
        </bottom>
    </BorderPane>
</StackPane>