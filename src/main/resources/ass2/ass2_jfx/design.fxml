<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane fx:controller="ass2.ass2_jfx.designController"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar style="-fx-background-color: #3a006f;">
            <Menu text="%file">
                <MenuItem text="%exit" onAction="#onExitClick"/>
            </Menu>
            <Menu text="%configuration">
                <MenuItem text="%settings"/>
            </Menu>
            <Menu text="%lookFeel">
                <MenuItem text="%dark" onAction="#onDarkClick"/>
                <MenuItem text="%light" onAction="#onLightClick"/>
            </Menu>
            <Menu text="%language">
                <MenuItem text="%english" onAction="#onENClick"/>
                <MenuItem text="%french" onAction="#onFRClick"/>
            </Menu>
        </MenuBar>
    </top>
    <left>
        <VBox spacing="20" alignment="TOP_CENTER" prefWidth="350"
              style="-fx-background-color: rgba(0,0,0,0.4);">
            <padding>
                <Insets top="40" left="20" right="20" bottom="30"/>
            </padding>
            <Label text="%designMode"
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            <Button text="%mainMenu" onAction="#onMainMenuClick"/>
            <Button fx:id="questionManager" text="%questionManager"
                    onAction="#showQuestionForm"/>
            <Button fx:id="playerManager" text="%playerManager"
                    onAction="#showPlayerForm"/>
            <Region VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>

    <center>
        <StackPane alignment="CENTER">
            <ImageView fx:id="backgroundImage" fitWidth="500"
                       preserveRatio="true" smooth="true">
                <image>
                    <Image url="@/ass2/ass2_jfx/WWTBAMUS2020Logo.png"/>
                </image>
            </ImageView>

            <VBox alignment="TOP_CENTER" spacing="20">
                <padding><Insets top="40"/></padding>

                <VBox fx:id="listViewContainer" spacing="10"
                      alignment="CENTER" visible="false"
                      managed="false" maxWidth="500">
                    <Label text="%questions"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;"/>
                    <ListView fx:id="questionListView"
                              maxWidth="500" prefHeight="200"/>
                </VBox>

                <VBox fx:id="questionForm" spacing="10"
                      alignment="CENTER" visible="false"
                      managed="false" maxWidth="500">
                    <TextField fx:id="questionField"
                               promptText="%enterQuestion" maxWidth="400"/>
                    <TextField fx:id="answerA"
                               promptText="%answerA" maxWidth="400"/>
                    <TextField fx:id="answerB"
                               promptText="%answerB" maxWidth="400"/>
                    <TextField fx:id="answerC"
                               promptText="%answerC" maxWidth="400"/>
                    <TextField fx:id="answerD"
                               promptText="%answerD" maxWidth="400"/>
                    <ComboBox fx:id="correctAns"
                              promptText="%selectCorrect" maxWidth="250"/>
                    <Button text="%addQuestion"
                            onAction="#addQuestion"/>
                    <Button text="%editQuestion"
                            onAction="#editQuestion"/>
                    <Button text="%saveChanges"
                            onAction="#saveEditedQuestion"/>
                    <Button text="%deleteQuestion"
                            onAction="#deleteQuestion"/>
                </VBox>

                <VBox fx:id="playerForm" spacing="20"
                      alignment="CENTER" visible="false"
                      managed="false" maxWidth="500"
                      style="-fx-background-color: rgba(255,255,255,0.08); -fx-background-radius: 15; -fx-padding: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 20, 0.3, 0, 8);">
                    <Label text="%playerManager"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;"/>
                    <ListView fx:id="playerListView"
                              prefHeight="250" maxWidth="400"
                              style="-fx-background-radius: 8;"/>
                    <TextField fx:id="playerNameField"
                               promptText="%enterPlayerName" maxWidth="400"
                               style="-fx-background-radius: 8;"/>
                    <Button text="%addPlayer" maxWidth="200"
                            onAction="#addPlayer"/>
                    <Button text="%editPlayer" maxWidth="200"
                            onAction="#editPlayer"/>
                    <Button text="%saveChanges" maxWidth="200"
                            onAction="#saveEditedPlayer"/>
                    <Button text="%deletePlayer" maxWidth="200"
                            onAction="#deletePlayer"/>
                </VBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>